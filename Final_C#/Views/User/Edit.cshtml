@using Microsoft.AspNetCore.Identity;

@{
    ViewData["Title"] = "Edit User";
    var user = ViewData["User"];
    var roles = ViewData["Roles"] as List<IdentityRole>;
    var userRoles = ViewData["UserRoles"] as List<string>;
}

<h2>Edit User</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label>Username</label>
        <input type="hidden" name="username" value="@user" />
        <input class="form-control" value="@user" readonly />

    </div>
    
    <div class="form-group">
        <label>Roles</label>
        <select name="selectedRoles" multiple class="form-control">
            @foreach (var role in roles)
            {
                <option value="@role.Name">@role.Name</option>
            }
        </select>
    </div>

    <button  type="submit" class="btn btn-primary">Save</button>
</form>
