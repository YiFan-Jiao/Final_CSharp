@model List<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Admin Page";
}


<h1>Roles</h1>
<a href="@Url.Action("Create") ">Create a new Role</a>
<table class="col-md-12">
    <thead>
        <tr>
            <th class="col-md-6">Name</th>
            <th class="col-md-6">Action</th>
        </tr>
        
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td> 
                <td>
                    <a asp-action="Edit" asp-route-id=@role.Id>Edit</a> |
                    <a asp-action="Delete" asp-route-id=@role.Id>Delete</a> 
                    
                </td>
            </tr>

        }
    </tbody>
</table>
